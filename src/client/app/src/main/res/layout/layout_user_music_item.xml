<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout_user_music"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_user_music_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SongTitle"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_user_music_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_user_music_title"
        android:text="SongArtist"/>

    <TextView
        android:id="@+id/tv_user_music_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/tv_user_music_artist"
        android:text="SongDate"
        android:textSize="12sp"/>

</RelativeLayout>